<h1>Edit Task</h1>
<%= render 'shared/errors', obj: @task %>

<%= form_with(model: @task, local: true) do |f| %>
  <p>
    <%= f.label :Name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Description%><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Cancel and Return to tasks page', tasks_path %>
