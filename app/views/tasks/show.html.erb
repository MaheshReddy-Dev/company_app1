<h1>Showing Task details</h1>
  <p><strong>Name: </strong><%= @task.name %></p>
  <p><strong>Description: </strong><%= @task.description %></p>
  <p><strong>Project Title: </strong><%= @task.project.title%></p>
   <%= link_to 'Edit', edit_task_path(@task) %> |
   <%= link_to 'Delete' , task_path(@task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %> |
   <%= link_to 'Return to tasks listing page', tasks_path %>
