<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Company</th>
      <th>Gender</th>
      <th>experience</th>
      <th>salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.phonenumber %></td>
        <td><%= employee.email %></td>
        <td><%= employee.company.name%></td>
        <td><%= employee.gender%></td>
        <td><%= employee.experience%></td>
        <td><%= employee.salary%></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
<td><%= link_to 'Delete', employee_path(employee), data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

