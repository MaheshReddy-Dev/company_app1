<h1>Edit Employee</h1>
<% if @employee.errors.any? %>
  <h2> The following reasons prevented the Employee to be saved </h2>
    <ul>
     <%= @employee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>
<% end%>

<%= form_with(model: @employee, local: true) do |f| %>
  <p>
    <%= f.label :Name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :PhoneNumber %><br/>
    <%= f.text_field :phonenumber %>
  </p>
  <p>
    <%= f.label :Salary %><br/>
    <%= f.text_field :salary %>
  </p>
  <p>
    <%= f.label :Experience %><br/>
    <%= f.text_field :experience %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Cancel and Return to employees page', employees_path %>
