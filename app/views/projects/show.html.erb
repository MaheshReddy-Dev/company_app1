<h1>Showing Project details</h1>
  <p><strong>Title: </strong><%= @project.title %></p>
  <p><strong>Description</strong><%=@project.description%></p>
  <p><strong>Employee: </strong><%= @project.employee.name%></p>
   <%= link_to 'Edit', edit_project_path(@project) %> |
   <%= link_to 'Delete' , project_path(@project), data: {turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?'} %> |
   <%= link_to 'Return to projects listing page', projects_path %> |
   <%= link_to 'Add task' , new_task_path(project_id: @project.id) %> 
