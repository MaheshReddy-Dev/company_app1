<% if @companies.blank? %>
  <p>No companies found.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
        <tr id="<%= company.id %>">
          <td><%= company.name %></td>
          <td>
            <a href='#' class="show">Details</a>
            <a href="#" class="edit">Edit</a>
            <a href="#" class="destroy">Destroy</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
