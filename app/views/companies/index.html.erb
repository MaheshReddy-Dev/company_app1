<div id="companies-list">
  <%= render 'companies/list' %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $.ajax({
      url: '/companies',
      type: 'GET',
      success: function(r){
        $('#companies-list').html(r);
      }
    });
  });
</script>


